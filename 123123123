Задание №1: Вычисление суммы натуральных чисел
#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Введите положительное целое число: ";
    cin >> n;

    // Проверка на корректность введенного числа
    if (n <= 0) {
        cout << "Ошибка: введено некорректное число!" << endl;
        return 1;  // Завершаем программу с кодом ошибки
    }

    // Вычисление суммы чисел от 1 до n
    int sum = 0;
    for (int i = 1; i <= n; i++) {
        sum += i;
    }

    // Вывод результата
    cout << "Сумма = " << sum << endl;
    return 0;
}

---------------------------------------------------------------------------------------------Задание №2: Чётное-нечетное

#include <iostream>
using namespace std;

int main() {
    int number;
    while (true) {
        cout << "Введите число: ";
        cin >> number;

        if (number == 000) {
            cout << "Выход" << endl;
            break;  // Выход из бесконечного цикла
        }

        if (number % 2 == 0) {
            cout << "Чётное" << endl;
        } else {
            cout << "Нечётное" << endl;
        }
    }
    return 0;
}

-----------------------------------------------------------------------------------------Задание №3: Гласная-согласная

#include <iostream>
using namespace std;

int main() {
    char letter;
    while (true) {
        cout << "Введите букву: ";
        cin >> letter;

        if (letter == 'q' || letter == 'Q') {
            cout << "Выход" << endl;
            break;  // Выход из бесконечного цикла
        }

        // Преобразуем символ в нижний регистр для упрощения проверки
        letter = tolower(letter);

        // Проверяем, является ли буква гласной
        if (letter == 'а' || letter == 'е' || letter == 'ё' || letter == 'и' ||
            letter == 'о' || letter == 'у' || letter == 'ы' || letter == 'э' ||
            letter == 'ю' || letter == 'я') {
            cout << "'" << letter << "' - гласная." << endl;
        } else {
            cout << "'" << letter << "' - согласная." << endl;
        }
    }
    return 0;
}


--------------------------------------------------------------------------------------Задание №4: Наибольшее из трёх

#include <iostream>
#include <algorithm>  // Для функции max
using namespace std;

int main() {
    double a, b, c;

    for (int i = 1; i <= 3; i++) {
        cout << "Итерация " << i << ":" << endl;
        cout << "Введите три числа:" << endl;

        cout << "Первое число: ";
        cin >> a;
        cout << "Второе число: ";
        cin >> b;
        cout << "Третье число: ";
        cin >> c;

        // Находим наибольшее и наименьшее число
        double maxNum = max({a, b, c});
        double minNum = min({a, b, c});

        cout << "Наибольшее число: " << maxNum << endl;
        cout << "Наименьшее число: " << minNum << endl;
    }

    return 0;
}

-----------------------------------------------------------------------------------------------Задание №5: Високосный год

#include <iostream>
using namespace std;

int main() {
    int year;
    cout << "Введите год: ";
    cin >> year;

    // Проверка на високосный год
    if ((year % 4 == 0 && year % 100 != 0) || year % 400 == 0) {
        cout << "Високосный год" << endl;
    } else {
        cout << "Не високосный год" << endl;
    }

    return 0;
}










