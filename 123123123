---------------------------------------------------------------------------------Задание №2: Ввод-вывод.


#include <iostream>
using namespace std;

int main() {
    int number;
    cout << "Введите целое число: ";  // Запрос на ввод числа
    cin >> number;  // Считывание введенного числа
    cout << "Вы ввели " << number << endl;  // Вывод введенного числа
    return 0;
}



-------------------------------------------------------------------------------------Задание №3: Арифметические операции.

#include <iostream>
using namespace std;

int main() {
    int a, b;
    cout << "Введите первое число: ";  // Запрос первого числа
    cin >> a;  // Считывание первого числа

    cout << "Введите второе число: ";  // Запрос второго числа
    cin >> b;  // Считывание второго числа

    // Вычисление суммы и произведения
    cout << a << " + " << b << " = " << a + b << endl;
    cout << a << " * " << b << " = " << a * b << endl;

    return 0;
}


------------------------------------------------------------------------------------------Задание №4: Целочисленное деление в C++.

#include <iostream>
using namespace std;

int main() {
    int dividend, divisor;
    
    // Запрос делимого
    cout << "Введите делимое: ";
    cin >> dividend;

    // Запрос делителя
    cout << "Введите делитель: ";
    cin >> divisor;

    // Проверка на деление на ноль
    if (divisor == 0) {
        cout << "Ошибка: деление на ноль невозможно!" << endl;
    } else {
        // Вычисление частного и остатка
        cout << "Частное = " << dividend / divisor << endl;
        cout << "Остаток = " << dividend % divisor << endl;
    }

    return 0;
}








